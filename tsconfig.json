{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6", 
      "DOM"
    ],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true, 
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/tests/*",
  ]
}
